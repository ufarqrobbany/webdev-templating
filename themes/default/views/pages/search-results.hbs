{{! themes/default/views/pages/search-results.hbs }}
<div class="max-w-[800px] mx-auto py-6 px-4" >
    {{#if searchQuery}}
        <p class="text-slate-600 dark:text-slate-300">Menampilkan hasil untuk: <strong>{{searchQuery}}</strong></p>

        {{!-- Users Section --}}
        <section class="mt-8">
                                                <h3 class="section-title-modern">Pengguna </h3>

            <div class="card">
                {{!-- <div class="flex items-center justify-between mb-3">
                    <h2 class="m-0">Pengguna Ditemukan <small class="font-normal text-slate-500">(Max 10)</small></h2>
                </div> --}}
                {{#if users.length}}
                    <ul class="list-none m-0 p-0 divide-y divide-gray-100 dark:divide-white/10">
                        {{#each users}}
                            <li class="py-3 first:pt-0 last:pb-0">
                                <a href="/users/{{id}}/profile" class="no-underline" style="color: inherit;">
                                    <div class="flex items-center gap-3">
                                        <div class="avatar avatar-md {{userGradient id}} flex-shrink-0">
                                            {{userInitials firstName lastName}}
                                        </div>
                                        <div class="flex flex-col">
                                            <span class="font-semibold">{{firstName}} {{lastName}}</span>
                                            <span class="text-sm text-slate-500">{{email}}</span>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        {{/each}}
                    </ul>
                {{else}}
                    <p class="m-0">Tidak ada pengguna yang cocok dengan: <strong>{{searchQuery}}</strong>.</p>
                {{/if}}
            </div>
        </section>

        {{!-- Posts Section --}}
        <section class="mt-8">
            <div class="flex items-center justify-between mb-2">
                <h3 class="section-title-modern">Postingan</h3>
            </div>
            {{#if posts.length}}
                <div class="post-list">
                    {{#each posts}}
                        {{> _post-item this}}
                    {{/each}}
                </div>
            {{else}}
                <div class="card">
                    <p class="m-0">Tidak ada postingan yang cocok dengan: <strong>{{searchQuery}}</strong>.</p>
                </div>
            {{/if}}
        </section>

    {{else}}
        <h1 class="page-title section-title-modern" style="margin-bottom: .25rem;">{{pageTitle}}</h1>

        <div class="card">
            <p class="m-0">Silakan masukkan kata kunci pencarian di kolom pencarian di header untuk memulai.</p>
        </div>
    {{/if}}
</div>